<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Cocur\Slugify\Slugify" />
        <service id="slugify" alias="Cocur\Slugify\Slugify" />
        <service id="cocur_slugify" alias="Cocur\Slugify\Slugify" />
        <service id="Cocur\Slugify\SlugifyInterface" alias="Cocur\Slugify\Slugify" />
        
        <service id="Cocur\SlugifySymfonyBundle\Twig\SlugifyExtension">
            <tag name="twig.extension" />
            <argument type="service" id="Cocur\Slugify\Slugify" />
        </service>
        <service id="cocur_slugify.twig.slugify" alias="Cocur\SlugifySymfonyBundle\Twig\SlugifyExtension" />
    </services>
</container>